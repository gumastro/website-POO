<%= stylesheet_link_tag 'pages' %>
<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<table>
  <thead>
    <tr>
        <th>Name </th>
      <!-- <th>Cpf </th> -->
      <!-- <th>Address </th> -->
      <th>Tel </th>
      <th>Birthdate </th>
      <!-- <th>User</th> -->
      <th>Bio </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
          <td><%= owner.name %></td>
        <!-- <td><%= owner.cpf %></td> -->
        <!-- <td><%= owner.address %></td> -->
        <td><%= owner.tel %></td>
        <td><%= owner.birthdate %></td>
        <!-- <td><%= owner.user %></td> -->
        <td><%= owner.bio %></td>
        <td><%= link_to 'Show', owner %></td>
        <% if current_user == owner.user %>
            <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
            <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
