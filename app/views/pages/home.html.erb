<%= stylesheet_link_tag 'pages', media: 'all' %>
<div class="center jumbotron"></br><h1><span class="nome3">Welcome to </span><span class="nome1">Pet</span><span class="nome2">Center</span></h1></br></div>

<div class="div_home">
    <ul class="ul_home">
        <% @pets.each do |pet| %>
            <li class="li_home">

                <div class="div_foto">
                  <%= link_to image_tag(pet.image, :class => "foto"), pet_path(pet) %>
                </div>

                <h3 class="h3_home"><%= pet.name %></h3>
                <p class="p_home">
                  <td><%= pet.details %></td></br></br>
                  <td><%= pet.idade %> years</td></br>
                  <td>Dono: <%= pet.owner.name %></br>
                  <td>e-mail: <%= pet.owner.user.email %> | phone: <%= pet.owner.tel %></td></br>
                  <td><%= link_to 'Show', pet %></td>
                  <% if current_user && current_user == pet.owner.user %>
                      <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
                      <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
            </li>
        <% end %></p>
  </ul>
</div>
