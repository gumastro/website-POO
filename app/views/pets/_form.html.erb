  <div class="form-group">
    <%= form.label :age, class: 'control-label' %>
    <%= form.number_field :age, class: 'form-control', placeholder: "Idade do seu pet.", min: 0, max: 250 %>
  </div>

  <div class="form-group">
    <%= form.submit 'Cadastrar Pet', :class => 'btn btn-primary' %>
  </div>
<% end %>
