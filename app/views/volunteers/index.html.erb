<%= stylesheet_link_tag 'pages' %>
<p id="notice"><%= notice %></p>

<h1>Volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <!-- <th>Cpf</th>
      <th>Address</th> -->
      <th>Tel</th>
      <th>Birthdate</th>
      <!-- <th>User</th> -->
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <!-- <td><%= volunteer.cpf %></td>
        <td><%= volunteer.address %></td> -->
        <td><%= volunteer.tel %></td>
        <td><%= volunteer.birthdate.to_date %></td>
        <!-- <td><%= volunteer.user %></td> -->
        <td><%= volunteer.bio %></td>
        <td><%= link_to 'Show', volunteer %></td>
        <% if current_user == volunteer.user %>
            <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
