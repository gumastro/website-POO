<%= stylesheet_link_tag 'sign_up' %>
<%= form_with(model: volunteer, local: true) do |form| %>
  <% if volunteer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(volunteer.errors.count, "error") %> prohibited this volunteer from being saved:</h2>

      <ul>
      <% volunteer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, autocomplete: "cpf", type: "cpf", class: "form-control", placeholder: "Valid CPF" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, autocomplete: "address", type: "address", class: "form-control", placeholder: "Home address" %>
  </div>

  <div class="form-group">
    <%= form.label :tel %>
    <%= form.text_field :tel, autocomplete: "tel", type: "tel", class: "form-control", placeholder: "Phone number" %>
  </div>

  <div class="form-group">
    <%= form.label :birthdate %></br>
    <%= form.date_select :birthdate, {}, { class: "form-control date-select" } %>
  </div>

  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_area :bio, autocomplete: "bio", type: "bio", class: "form-control", placeholder: "Write about yourself!" %>
  </div>

  <div class="actions form-group">
    <%= form.submit "Save changes", type: "submit", class: "btn btn-primary" %>
  </div>
<% end %>
